CC = @CC@
VERSION = @VERSION@
CFLAGS = @CFLAGS@
LIBS = @LIBS@
INSTALL=@INSTALL@
prefix=@prefix@
bindir=$(prefix)@bindir@
FLAGS=$(CFLAGS) @DEFS@ 

all: 
	@cd libUseful-2.0; $(MAKE)
	$(CC) $(FLAGS) -o movgrab main.c libUseful-2.0/libUseful-2.0.a $(LIBS)
clean:
	@rm -f movgrab libUseful-2.0/*.o libUseful-2.0/*.a libUseful-2.0/*.so

install:
	$(INSTALL) movgrab $(bindir)
