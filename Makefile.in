CC = @CC@
VERSION = @VERSION@
CFLAGS = @CFLAGS@
LIBS = @LIBS@
INSTALL=@INSTALL@
prefix=@prefix@
bindir=$(prefix)@bindir@
FLAGS=$(CFLAGS) @DEFS@ 

all: 
	@cd libUseful-1.0; $(MAKE)
	$(CC) $(FLAGS) -o movgrab main.c libUseful-1.0/libUseful-1.0.a $(LIBS)
clean:
	@rm -f movgrab libUseful-1.0/*.o libUseful-1.0/*.a libUseful-1.0/*.so

install:
	$(INSTALL) movgrab $(bindir)
